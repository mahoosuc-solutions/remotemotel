# GitHub Codespaces Environment Configuration
# Secrets should be configured at: https://github.com/USER/REPO/settings/secrets/codespaces

# Environment
ENV=codespaces
PROJECT_ID=remotemotel-codespaces
REGION=us-central1

# Database (Local PostgreSQL in container)
DATABASE_URL=postgresql://stayhive:stayhive@localhost:5433/stayhive
DIRECT_URL=postgresql://stayhive:stayhive@localhost:5433/stayhive

# OpenAI (Required - Set as Codespace Secret)
OPENAI_API_KEY=${OPENAI_API_KEY}

# OpenAI Realtime API (Phase 3)
OPENAI_REALTIME_ENABLED=true
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
OPENAI_REALTIME_VOICE=alloy
OPENAI_REALTIME_TEMPERATURE=0.8
OPENAI_REALTIME_MAX_TOKENS=4096

# Twilio (Optional - For voice testing)
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID:-MOCK}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN:-MOCK}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER:-+15555555555}
TWILIO_WEBHOOK_URL=http://localhost:8000
VOICE_WEBSOCKET_URL=ws://localhost:8000
VOICE_AI_SERVICE_URL=https://voice-ai-assistant-jvm6akkheq-uc.a.run.app

# Stripe (Optional - For payment testing)
STRIPE_API_KEY=${STRIPE_API_KEY:-sk_test_mock}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET:-whsec_mock}

# Voice Module
VOICE_ENABLED=true
VOICE_RECORDING_ENABLED=true
VOICE_RECORDING_PATH=/workspace/data/recordings
DEFAULT_LANGUAGE=en-US
MAX_CALL_DURATION_MINUTES=30

# Hotel Context (for AI conversations)
HOTEL_NAME=RemoteMotel
HOTEL_LOCATION=GitHub Codespaces
HOTEL_AMENITIES=Free Wi-Fi, Complimentary Breakfast, Swimming Pool, Fitness Center
HOTEL_CHECKIN_INSTRUCTIONS=Check-in at the front desk upon arrival
HOTEL_CHECKIN_TIME=3:00 PM
HOTEL_CHECKOUT_TIME=11:00 AM
HOTEL_PET_POLICY=Pets welcome with $40 fee

# Department Phone Numbers (for call transfer)
FRONT_DESK_PHONE=+15555551001
HOUSEKEEPING_PHONE=+15555551002
MANAGEMENT_PHONE=+15555551003
MAINTENANCE_PHONE=+15555551004

# Hold Music
HOLD_MUSIC_URL=https://assets.stayhive.ai/hold-music/gentle-piano.mp3

# Recording Storage
RECORDING_STORAGE=local

# Knowledge Base
KNOWLEDGE_TOP_K=5
EMBEDDING_MODEL=text-embedding-3-small

# Feature Flags
FEATURE_VOICE_AI=true
FEATURE_PAYMENT_LINKS=true
FEATURE_BOOKING_ENGINE=true
FEATURE_KNOWLEDGE_BASE=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Testing
SKIP_DEPS_CHECK=1
PYTHONPATH=/workspace
