# Front Desk Platform - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================
# Environment
# ============================================
ENV=development
PROJECT_ID=front-desk-dev
REGION=us-central1

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://stayhive:stayhive@localhost:5433/stayhive

# ============================================
# OpenAI (Required for Knowledge Base & Voice AI)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Twilio (Required for Voice Calls)
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# ============================================
# Stripe (Required for Payment Links)
# ============================================
STRIPE_API_KEY=sk_test_your-stripe-api-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Voice Module Configuration
# ============================================
VOICE_ENABLED=true
VOICE_RECORDING_ENABLED=true
VOICE_RECORDING_PATH=./data/recordings
VOICE_MODEL=gpt-4o-realtime-preview
VOICE_TTS_VOICE=alloy

# ============================================
# Knowledge Base Configuration
# ============================================
KNOWLEDGE_TOP_K=5
EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# Redis (Optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Security & Authentication
# ============================================
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Feature Flags
# ============================================
FEATURE_VOICE_AI=true
FEATURE_PAYMENT_LINKS=true
FEATURE_BOOKING_ENGINE=true
FEATURE_KNOWLEDGE_BASE=true

# ============================================
# Cloud Deployment (Production Only)
# ============================================
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GCS_BUCKET=your-storage-bucket
# CLOUD_SQL_CONNECTION=project:region:instance
